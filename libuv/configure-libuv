#!/bin/sh
#*=====================================================================*/
#*    serrano/prgm/project/bigloo/libuv/configure-libuv                */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Mon Sep  7 09:49:25 2009                          */
#*    Last change :  Tue Jul 22 10:38:47 2014 (serrano)                */
#*    Copyright   :  2009-14 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    Ad-hoc configuration for the GC.                                 */
#*=====================================================================*/

src=libuv-$libuvversion

echo "configure libuv with \"./configure --libdir=$bootdir/lib/$release --includedir=$bootdir/lib/$release $libuvconfigureopt\"" >> ../configure.log

(cd $src && \
 sh autogen.sh && \
 export CC=$cc && \
 ./configure --libdir=$libdir --includedir=$libdir $libuvconfigureopt 2>&1 >> ../../configure.log || \
 (echo "configure libuv fail, see configure.log file." && exit 1)) || exit 1

