#!/bin/sh
#*=====================================================================*/
#*    serrano/prgm/project/bigloo/autoconf/ccwarning                   */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Tue Mar  7 16:28:42 2017                          */
#*    Last change :  Tue Mar  7 18:10:00 2017 (serrano)                */
#*    Copyright   :  2017 Manuel Serrano                               */
#*    -------------------------------------------------------------    */
#*    Disable useless but painful clang warning messages.              */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    flags                                                            */
#*---------------------------------------------------------------------*/
cflags="-Wno-unused-value -Wno-parentheses-equality -Wno-parentheses"

#*---------------------------------------------------------------------*/
#*    We parse the arguments                                           */
#*---------------------------------------------------------------------*/
while : ; do
  case $1 in
    "")
      break;;

    --cflags=*|-cflags=*)
      cflags="`echo $1 | sed 's/^[-a-z]*=//'`";;

    -*)
      echo "Unknown option \"$1\", ignored" >&2;;
  esac
  shift
done

file=$TMP/actest$USER

#*---------------------------------------------------------------------*/
#*    compile                                                          */
#*---------------------------------------------------------------------*/
compile="$CC $cflags -c >/dev/null"

#*---------------------------------------------------------------------*/
#*    The test C file                                                  */
#*---------------------------------------------------------------------*/
if( test -f $file.c ); then
   rm -f $file.c || exit $?
fi

#*---------------------------------------------------------------------*/
#*    Test                                                             */
#*    -------------------------------------------------------------    */
#*    GCC versions 3.xx (until gcc3.3.3 I think) on the register       */
#*    allocations. We try to detect this in the Bigloo configuration.  */
#*---------------------------------------------------------------------*/
cat > $file.c <<EOF
int foo() {
  8;
  return 0;
}
EOF

#*---------------------------------------------------------------------*/
#*    Compilation test                                                 */
#*---------------------------------------------------------------------*/
if eval "$BUILDSH $compile"; then
   \rm -f $file.*
   echo $cflags
   exit 0
fi

\rm -f $file.*
echo ""
exit 0
