#!/bin/sh
#*=====================================================================*/
#*    /misc/virtual/android/BGL/bigloo3.3b/autoconf/android            */
#*    -------------------------------------------------------------    */
#*    Author      :  Marcos Dione                                      */
#*    Creation    :  Wed Aug  9 13:27:23 1995                          */
#*    Last change :  Wed Feb  3 16:38:03 2010 (serrano)                */
#*    -------------------------------------------------------------    */
#*    Detect if we are compiling for Android                           */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    We parse the arguments                                           */
#*---------------------------------------------------------------------*/
while : ; do
  case $1 in
    "")
      break;;

    -*)
      echo "Unknown option \"$1\", ignored" >&2;;
  esac
  shift
done

#*---------------------------------------------------------------------*/
#*    Test                                                             */
#*    -------------------------------------------------------------    */
#*    We assume that we are under Android                              */
#*---------------------------------------------------------------------*/


if [ "$HOSTCPU " = "arm " ]; then
  build_id=`$HOSTSH getprop ro.build.version.release`
  if [ "$build_id " = "2.0 " -o "$build_id " = "2.0.1 " -o "$build_id " = "ECLAIR " ]; then
    # sometimes the emulator images boot without /tmp. we use /data/tmp instead
    # the adb tool for sending commands to the device 'eats' the error codes
    # so we blindly create the dir instead of testing first
    # $HOSTSH ls /data/tmp 2> /dev/null || $HOSTSH mkdir /data/tmp
    $HOSTSH mkdir /data/tmp > /dev/null
    echo "yes"
  else
    echo "wrong version: $build_id"
  fi
else
  echo "no"
fi
