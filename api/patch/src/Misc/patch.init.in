;*---------------------------------------------------------------------*/
;*    The library                                                      */
;*---------------------------------------------------------------------*/
(declare-library! 'patch
   :srfi '(patch)
   :basename "bigloopatch"
   :module-init '__patch_patch
   :module-eval '__patch_makelib)

;*---------------------------------------------------------------------*/
;*    Compile and Link options                                         */
;*---------------------------------------------------------------------*/
(cond-expand
   (bigloo-compile
    ;; patch includes
    (set! *additional-include-foreign*
       (cons "bglpatch.h" *additional-include-foreign*))))

