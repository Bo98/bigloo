#!/bin/sh
#*=====================================================================*/
#*    serrano/prgm/project/bigloo/pcre/configure-pcre                  */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Mon Sep  7 09:49:25 2009                          */
#*    Last change :  Wed Jun 21 08:57:56 2017 (serrano)                */
#*    Copyright   :  2009-17 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    Ad-hoc configuration for the PCRE.                               */
#*=====================================================================*/

echo "configure pcre with \"./configure --libdir=$bootdir/$fildir --includedir=$bootdir/$fildir $libpcreconfigureopt\"" >> ../configure.log

(cd pcre-$pcreversion && \
 export CC=$cc && \
 ./configure --libdir=$libdir/$fildir --includedir=$libdir/$fildir $pcreconfigureopt 2>&1 >> ../../configure.log || \
 (echo "configure pcre fail, see configure.log file." && exit 1)) || exit 1

